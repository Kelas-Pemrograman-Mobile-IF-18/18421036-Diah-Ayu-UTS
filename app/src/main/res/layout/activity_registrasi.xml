<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".users.Registrasi">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Registrasi"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_marginRight="16dp"
      android:layout_marginLeft="16dp" />

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="450dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">

      <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
          android:layout_width="match_parent"
          android:layout_height="55dp"
          app:labelText="Username">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

      <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_marginTop="10dp"
          app:labelText="Nama Lengkap">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/NamaLengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

      <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_marginTop="10dp"
          app:labelText="Password">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

      </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

       <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_marginTop="10dp"
          app:labelText="Konfirmasi Password">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edtKonfirmasiPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

      </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

      <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_marginTop="10dp"
          app:labelText="Nomor Telp"
          >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edtNomorTelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

      </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

      <com.ornach.nobobutton.NoboButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:padding="10dp"
          app:nb_backgroundColor="@color/purple_500"
          app:nb_borderColor="#FFFFFF"
          app:nb_borderWidth="2dp"
          app:nb_focusColor="#B83CC3"
          app:nb_radius="5dp"
          android:id="@+id/btnkeLogin"
          app:nb_text="Registrasi"
          app:nb_textColor="#FFF" />


      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@null"
          android:text="Sudah Punya Akun"
          android:id="@+id/btnLogin"
          android:textAllCaps="false" />

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>